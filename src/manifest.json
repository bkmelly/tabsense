{
  "manifest_version": 3,
  "name": "TabSense",
  "version": "0.1.0",
  "description": "AI-powered research assistant for Chrome tabs - Summarize and query your open tabs using Chrome's built-in AI",
  
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "activeTab",
    "contextMenus"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "src/ui/popup/popup.html",
    "default_title": "Open TabSense"
  },
  
  "sidebar_action": {
    "default_panel": "src/ui/sidebar/sidebar.html",
    "default_title": "TabSense Research Assistant"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://www.youtube.com/*", "*://youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false,
      "type": "module"
    },
    {
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*"],
      "js": ["lib/commentNavigator.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  
      "web_accessible_resources": [
        {
          "resources": ["assets/images/*", "src/ui/test/test-ai.html"],
          "matches": ["<all_urls>"]
        }
      ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  
  "minimum_chrome_version": "88"
}
